<h1> Productos </h1>

<ul>
<div class="Products-Container">

{{#each products}}
<div class="containerCard">
    <img src={{image}}>
    <h2>{{title}}</h2>
    <p>{{description}}</p>
    <p>Price: ${{price}}</p>
    <p>Category: {{category}} </p>
  <button class="btnMio"><a class="btnMio" href="/products/{{id}}">ver Detalles</a></button>
    </div>
    
{{/each}}

</div>
</ul>
<div class="divContainerPage">
{{#if hasPrevPage}}
<a href="/products?page={{prevPage}}"> Anterior </a>
{{/if}}
<p>Pagina {{currentPage}} de {{totalPages}} </p>
{{#if hasNextPage}}
<a href="/products?page={{nextPage}}"> Siguiente </a>
{{/if}}


</div>
</div>