<h1>Convertirse en Vendedor</h1>

<form action="/api/user/{{uid}}/documents" method="POST" enctype="multipart/form-data">

    <label for="document1">Documento:</label>
    <input type="file" name="document" id="document1">

    <label for="profile">Perfil:</label>
    <input type="file" name="profile" id="profile">

    <label for="product1">Producto:</label>
    <input type="file" name="products" id="product1">

    <button type="submit">Enviar Documentos</button>
</form>
 
  <script>
        document.getElementById('vendorForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Previene el envío del formulario

            Swal.fire({
                title: '¿Estás seguro?',
                text: "¡Estás a punto de enviar tus documentos!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, enviar'
            }).then((result) => {
                if (result.isConfirmed) {
                    this.submit(); // Envía el formulario si el usuario confirma
                }
            });
        });
    </script>